//TEXTINPUT
//DESAFIO 01 

import React, { Component } from 'react';
import {Text, View, ScrollView, StyleSheet, TextInput, Image } from 'react-native';

class App extends Component{
  //construtor da classe
  
  constructor(props){
    super(props);
    this.state = {nome: '',};
    //declaração ou instanciaçaõ da função
    this.capturaNome = this.capturaNome.bind(this);
  }
  //inicio da função
  capturaNome(texto){
    if(texto.length > 0){
      this.setState({nome:'vc está digitando...:\n' + texto});
    }else{
      this.setState({nome:'o texto foi apagado'});
    }
  };
  render (){
    return(
      <ScrollView style = {estilos.area_fundo}>
          <View>
            <View style = {estilos.areaDesafio}>
              <Text style = {estilos.titulo}>Aula 06 - DESAFIO 01</Text>
              <Text style = {estilos.subTitulo1}>Componente textInput:</Text>
              <Text style = {estilos.paragrafo}>Este componente permite reservar um local dentro do layout onde o ususario pode interagir com o app, digitando algum texto ou número.</Text>
              <Text style = {estilos.subTitulo2}>Exemplo</Text>
              <Text style = {estilos.paragrafo}>Digite o seu nome na caixa de texto abaixo:</Text>
              <TextInput style = {estilos.cxDeEntrada} onChangeText = {this.capturaNome}></TextInput>
              <Text style = {estilos.paragrafo}>{this.state.nome}</Text>
            </View>
            <View style = {estilos.areaLogo}>
              <Image source = {require('./img/logo.png')} style = {estilos.logo}></Image>
              <Text style = {estilos.subTitulo3}>2022 - Alexandre Wilian Nikitin</Text>
            </View>
          </View>
      </ScrollView>
    );
  }
}
export default App;

//Folha de estilos

const estilos = StyleSheet.create({
  area_fundo:{flex:1, marginTop:30, backgroundColor:'indianred', marginHorizontal:10, marginBottom:5},
  titulo:{backgroundColor:'darkred', color:'white', fontSize:30, textAlign:'center',
          paddingVertical:10,fontWeight:'bold', marginTop:50, marginBottom:30},
  subTitulo1:{fontSize:20, marginBottom:10, marginTop:20, marginLeft:20, color:'darkblue'},
  subTitulo2:{fontSize:20,marginBottom:10, marginTop:20, marginLeft:20, color: 'white'},
  subTitulo3:{color: 'white'},
  paragrafo: {marginBottom: 10, marginHorizontal:20, fontSize:15, textAlign:'justfy'},
  cxDeEntrada:{borderColor:'darkred', borderWidth:1, width:300, marginLeft:20, height:40,fontSize:20, color:'white', padding:10},
  areaDesafio:{flex:2},
  areaLogo:{flex:1, marginTop: 40, alignItems:'center', justfyContent:'center'},
  logo:{width:300, height:200, resizeMode:'contain', borderRadius:100, margin:30},
});






















