public class Missao1_DESAFIO3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//printa no console "MISSÃO 1 - DESAFIO 3"
		System.out.println("----------------------");
		System.out.println("|MISSÃO 1 - DESAFIO 3|");
		System.out.println("----------------------");
		
		//Declaração de variaveis
		double valor = 12.34;
		int a = 0;
		
		//Atribuindo valor de double para int
		a = (int)valor;
		
		//printa o valor da variavel do tipo double
		System.out.println("--------------------------------------------------------------");
		System.out.printf("|Sua variavel do tipo double denominada 'valor' é igual à: %f|", valor);
		
		//printa o valor da variavel do tipo int que recebeu e converteu  a  double
		System.out.printf("\n|Sua variavel do tipo int denominada 'a' é igual à: %d     |", a);
		System.out.println("--------------------------------------------------------------");
		//printa no console "DESAFIO 3 CONCLUÍDO!"
		System.out.println("----------------------");
		System.out.println("|DESAFIO 3 CONCLUÍDO!|");
		System.out.println("----------------------");
	}

}
